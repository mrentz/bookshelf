<h1><%= @book.title %></h1>

<h2><%=link_to @book.title, book_path(@book) %></h2>
<p><%= @book.thoughts %></p>

<% if @comments %>
  <h3> Comments </h3>

  <% @comments.each do |comment| %>
    <p><strong><%= comment.author %></strong></p>
    <%= comment.text %>
  <% end %>
<% end %> 

<h3> Post Your Comment </h3>

<div id=form>

  <%= form_for(@book) do |f| %>
  <%= f.fields_for :comments do |c| %>
  
  <div>
    <p><%= c.label :author %></p>
    <p><%= c.text_field :author %></p>
  </div>
  <%=@book.title%>
  <div>
    <p><%= c.label :text, "Comment" %></p>
    <p><%= c.text_field :text %></p>
  </div>
  
  <% end %>
  
  <%= f.submit 'Save' %>
  <% end %>
  
</div>
