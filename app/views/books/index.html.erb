  <%@books.each do |book| %>
  <h2> <%= link_to book.title, book_path(book) %></h2>
  <p> <%= book.thoughts %></p>
  <% end %>

  <%= will_paginate @books %>

  <% if current_admin %>

  <div>
    <p>
      Admin actions: <%= link_to 'New Book', new_book_path %>
    </p>
      </div>

  <% end %>

